<p><%= I18n.t("devise.mailer.email_changed.hello", :email => @email, :default => "Hello %{email}!") %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= I18n.t("devise.mailer.email_changed.unconfirmed_email", :email => @resource.unconfirmed_email, :default => "We're contacting you to notify you that your email is being changed to %{email}.") %></p>
<% else %>
  <p><%= I18n.t("devise.mailer.email_changed.confirmed_email", :email => @resource.email, :default => "We're contacting you to notify you that your email has been changed to %{email}.") %></p>
<% end %>
