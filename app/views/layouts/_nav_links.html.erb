<%= link_to projects_path, class: "#{all_projects_nav_link_class(variant)}" do %>
  <%= I18n.t("layouts.nav_links.all_projects", :default => "All Projects") %>
<% end %>

<% if current_user %>
  <%= link_to volunteered_projects_path, class: "#{volunteered_projects_nav_link_class(variant)}" do %>
    <%= I18n.t("layouts.nav_links.volunteered_projects", :default => "Volunteered Projects") %>
  <% end %>
  <%= link_to own_projects_path, class: "#{own_projects_nav_link_class(variant)}" do %>
    <%= I18n.t("layouts.nav_links.your_projects", :default => "Your Projects") %>
  <% end %>
<% end %>

<%= link_to volunteers_path, class: "#{volunteers_nav_link_class(variant)}" do %>
  <%= I18n.t("layouts.nav_links.volunteers", :default => "Volunteers") %>
<% end %>

<%= link_to offers_path, class: "#{offers_nav_link_class(variant)}" do %>
  <%= I18n.t("layouts.nav_links.offers", :default => "Offers") %>
<% end %>


<% if current_user %>
  <%= link_to edit_user_registration_path, class: "#{profile_nav_link_class(variant)}" do %>
    <%= I18n.t("layouts.nav_links.profile", :default => "Profile") %>
  <% end %>
  <%= link_to destroy_user_session_path, method: :delete, class: "#{logout_nav_link_class(variant)}" do %>
    <%= I18n.t("layouts.nav_links.log_out", :default => "Log out") %>
  <% end %>
<% else %>
  <%= link_to new_user_registration_path, class: "#{sign_up_nav_link_class(variant)}" do %>
    <%= I18n.t("layouts.nav_links.sign_up", :default => "Sign up") %>
  <% end %>
  <%= link_to new_user_session_path, class: "#{login_nav_link_class(variant)}" do %>
    <%= I18n.t("layouts.nav_links.log_in", :default => "Log in") %>
  <% end %>
<% end %>
