<p><%= I18n.t("devise.mailer.unlock_instructions.hello", :email => @resource.email, :default => "Hello %{email}!") %></p>

<p><%= I18n.t("devise.mailer.unlock_instructions.account_has_been_locked", :default => "Your account has been locked due to an excessive number of unsuccessful sign in attempts.") %></p>

<p><%= I18n.t("devise.mailer.unlock_instructions.unlock_your_account", :default => "Click the link below to unlock your account:") %></p>

<p><%= link_to I18n.t("devise.mailer.unlock_instructions.unlock_my_account", :default => 'Unlock my account'), unlock_url(@resource, unlock_token: @token) %></p>
